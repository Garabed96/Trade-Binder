{
  "name": "trade-binder-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "./scripts/setup-db.sh && turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "setup-db": "./scripts/setup-db.sh",
    "import-cards": "bun scripts/import-cards.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "bun": "^1.3.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "turbo": "^2.7.2"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx,mjs}": [
      "prettier --write",
      "eslint --fix --config apps/web/eslint.config.mjs"
    ],
    "*.{json,css,scss,md,html}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  }
}
